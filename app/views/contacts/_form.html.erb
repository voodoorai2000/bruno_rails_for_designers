<%= form_for @contact, :html => {:class => "form_class"} do |f| %>

<%= render :partial => "shared/errors", :locals => { :form => @contact } %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 20 %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, :size => 20 %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :newsletter %><br />
    <%= f.check_box :newsletter, :checked => (@contact.newsletter ? true : false)  %>
  </div>
  <div class="field">
    <%= f.label :sex %><br />
    <%= f.select :sex, ['Male', 'Female'], :include_blank => true %> 
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "29x50" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
